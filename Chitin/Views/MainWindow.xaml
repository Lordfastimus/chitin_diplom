<Window x:Class="Chitin.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Chitin.Views"
        mc:Ignorable="d"
        Title="Хитин" Height="600" Width="1200">
    <Grid Margin="16">
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">Сравнение результатов анализа</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <views:ComparationView/>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">Анализ программы</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <views:AnalizeStep/>
                </TabItem.Content>
            </TabItem>         
        </TabControl>
    </Grid>
</Window>
